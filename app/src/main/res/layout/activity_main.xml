<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="complejos.example.com.arrastarysoltar.MainActivity">

    <ImageButton
        android:id="@+id/btnRecargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_recargar"
        />

    <TextView
        android:id="@+id/txtContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:layout_margin="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
      >

        <TextView
            android:id="@+id/CuboUno"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="#ffe600"
            android:gravity="center"
            android:padding="8dp"
            android:text="Cubo Uno"
            android:textColor="@color/icons"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/CuboDos"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:background="#46d200"
            android:gravity="center"
            android:padding="8dp"
            android:text="Cubo Dos"
            android:textColor="@color/icons"
            android:textSize="18sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/CuboTres"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:background="#008cff"
            android:gravity="center"
            android:padding="8dp"
            android:text="Cubo Dos"
            android:textColor="@color/icons"
            android:textSize="18sp"
            android:visibility="gone"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedorEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/CajaCubos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#00ffffff"
            android:gravity="center"
            android:src="@drawable/ic_eliminar"
            android:textColor="@color/icons"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TxtEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Eliminar"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>
